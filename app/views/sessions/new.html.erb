<h1>Login</h1>

<% if flash[:notice].present? %>
    <h3><%= flash[:notice] %></h3>
<% end %>

<%= form_for User.new, url: login_path, method: :post do |fb| %>
    <%= fb.label :name %>
    <%= fb.text_field :name %>
    <br />

    <%= fb.label :password %>
    <%= fb.password_field :password %>
    <br />

    <%= fb.submit "Login" %>
<% end %>

<br />

<%= link_to "create user", new_user_path %>